<div class="relative flex">
  <div class="w-64 pt-12 pr-4">
    <DocfyOutput @scope="docs" as |node|>
      <SidebarNav @node={{node}} />
    </DocfyOutput>
  </div>

  <div class="flex-1 w-full px-4 pt-12">
    <div class="markdown">
      {{outlet}}
    </div>

    <div class="flex justify-between my-10">
      <DocfyPreviousAndNextPage as |previous next|>
        <div>
          {{#if previous}}
            <div class="text-sm">Previous</div>

            <DocfyLink @to={{previous.url}} class="text-xl text-green-700 dark:text-green-500">
              {{previous.title}}
            </DocfyLink>
          {{/if}}
        </div>
        <div>
          {{#if next}}
            <div class="text-sm text-right">Next</div>

            <DocfyLink @to={{next.url}} class="text-xl text-green-700 dark:text-green-500">
              {{next.title}}
            </DocfyLink>
          {{/if}}
        </div>
      </DocfyPreviousAndNextPage>
    </div>
  </div>

  <div class="w-64 pl-4">
    <PageHeadings />
  </div>
</div>
