<div class="relative lg:flex">
  <div class="flex-none w-64 pt-12 pr-4">
    <DocfyOutput @scope="docs" as |node|>
      <SidebarNav @node={{node}} />
    </DocfyOutput>
  </div>

  <div class="flex-grow w-full px-0 pt-12 lg:px-4">
    <DocfyOutput @fromCurrentURL={{true}} as |page|>
      <div
        class="markdown"
        {{intersect-headings this.setCurrentHeadingId headings=page.headings}}
      >
        {{outlet}}
      </div>
    </DocfyOutput>

    <div class="flex justify-between my-10">
      <DocfyPreviousAndNextPage as |previous next|>
        <div>
          {{#if previous}}
            <div class="text-sm">Previous</div>

            <DocfyLink @to={{previous.url}} class="text-xl text-green-700 dark:text-green-500">
              {{previous.title}}
            </DocfyLink>
          {{/if}}
        </div>
        <div>
          {{#if next}}
            <div class="text-sm text-right">Next</div>

            <DocfyLink @to={{next.url}} class="text-xl text-green-700 dark:text-green-500">
              {{next.title}}
            </DocfyLink>
          {{/if}}
        </div>
      </DocfyPreviousAndNextPage>
    </div>
  </div>

  <div class="flex-none hidden pl-4 w-54 lg:block">
    <PageHeadings @currentHeadingId={{this.currentHeadingId}} />
  </div>
</div>
